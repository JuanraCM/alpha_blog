<h1 class="form-title">All categories</h1>

<div class="center">

	<% @categories.each do |category| %>

		<ul class="listing">
			<div class="flex-row">
				<div id="description-container" class="card card-body col-md-4 offset-md-4 bg-light">
					<li class="article-title">
					<%= link_to category.name, category_path(category) %>
					</li>
					<li><small><%= pluralize(category.articles.count, "article") %></small></li>
				</div>
			</div>
		</ul>

	<% end %>
	<%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>