<h1 class="form-title">Log in</h1>

<%= form_for(:sessions, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

	<div class="form-group row">
		<div class="control-label col-sm-2 offset-sm-1">
			<%= f.label :email %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="control-label col-sm-2 offset-sm-1">
			<%= f.label :password %>
		</div>
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>

	<div id="btn-create" class="form-group">
		<div class="offset-sm-3">
			<%= f.submit "Log in", class: "btn btn-danger btn-lg" %>
		</div>
	</div>

	<div style="text-align: center;">
			[ <%= link_to "Cancel and return to Index page", articles_path %> ]
	</div>

<% end %>