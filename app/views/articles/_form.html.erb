<% if @article.errors.any? %>
	<h2>There were some errors trying to save the article:</h2>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

<div class="container">
	<div class="col-sm-12">

		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group row">
				<div class="control-label col-sm-2 offset-sm-1">
					<%= f.label :title %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>
			</div>

			<div class="form-group row">
				<div class="control-label col-sm-2 offset-sm-1">
					<%= f.label :description %>
				</div>
				<div class="col-sm-8">
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description or article", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-2 offset-sm-3">
					<%= f.submit class: "btn btn-danger btn-lg" %>
				</div>
			</div>

		<% end %>

		<div class="col-sm-4 offset-sm-3">
			[ <%= link_to "Cancel and return to Index page", articles_path %> ]
		</div>
	</div>
</div>