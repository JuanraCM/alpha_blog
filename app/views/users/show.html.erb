<h1 class="form-title">Welcome to <%= @user.username %>'s page</h1>
<div class="flex-row">
	<div class="col-md-4 offset-md-4 center">
		<%= gravatar_for @user, size: 150 %>
	</div>

	<div>
		<h4 class="form-title"><%= @user.username %>'s articles</h4>
		<%= render 'articles/articles', obj: @user.articles %>
	</div>

	<div class="nav-pages">
		<%= will_paginate(@user_articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
	</div>
</div>