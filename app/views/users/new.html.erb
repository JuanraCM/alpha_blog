<h1 class="form-title">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="flex-row">
	<div class="col-sm-12">

		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group row">
				<div class="control-label col-sm-2 offset-sm-1">
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter an username", autofocus: true %>
				</div>
			</div>

			<div class="form-group row">
				<div class="control-label col-sm-2 offset-sm-1">
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :email, class: "form-control", placeholder: "Enter an email", autofocus: true %>
				</div>
			</div>

			<div class="form-group row">
				<div class="control-label col-sm-2 offset-sm-1">
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter a password", autofocus: true %>
				</div>
			</div>

			<div id="btn-create" class="form-group">
				<div class="offset-sm-3">
					<%= f.submit "Sign Up",  class: "btn btn-danger btn-lg" %>
				</div>
			</div>

		<% end %>

		<div style="text-align: center;">
			[ <%= link_to "Cancel and return to Index page", articles_path %> ]
		</div>
	</div>
</div>